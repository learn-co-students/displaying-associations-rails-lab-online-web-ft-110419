<h1>Artists</h1>

<ul>
<% @artists.each do |artist| %>
    <li>
        <h3><%= link_to artist.name, artist_path(artist) %></h3>
        <h4><%= artist.song_count %> song</h4>
        <ul>
            <% artist.songs.each do |song| %>
            <li><%= link_to song.title, song_path(song) %></li>
            <% end %>
        </ul>
    </li>
<% end %>
</ul>